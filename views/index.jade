extends layout


block content

    // navbar
    nav.navbar.navbar-dark.bg-primary.navbar-fixed-top
      .container
        ul.nav.navbar-nav
          li.nav-item
            a.nav-link(href='#buscar')
              | Buscar 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#contenido') Contenido
          li.nav-item
            a.nav-link(href='#logistica') Logística
          li.nav-item
            a.nav-link(href='#expotec') Expotec
          li.nav-item
            a.nav-link(href='#care') CARE
          li.nav-item
            a.nav-link(href='#desarrollo') DE
          li.nav-item
            a.nav-link(href='#comite') CE
          li.nav-item
            a.nav-link(href='#asoc') Asociaciones
          li.nav-item
            a.nav-link(href='#invitados') Invitados
          li.nav-item
            a.nav-link(href='#proveedores') Proveedores
          li.nav-item
            a.nav-link(href='#prensa') Prensa
        a.navbar-brand.pull-sm-right.m-r-0.hidden-xs-down(href='#') Expotec
    // /navbar

    // /jumbotron
    .jumbotron.jumbotron-fluid.bg-info
      .container.text-sm-center.p-t-3
        h1.display-2 Registro Expotec
        p
          button.btn.btn-primary.btn-lg.m-r-1(type='button', data-toggle='modal', data-target='#staff-modal') Staff
          button.btn.btn-primary.btn-lg.m-r-1(type='button', data-toggle='modal', data-target='#asociaciones-modal') Asociaciones
          button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#externos-modal') Externos
    // /jumbotron

    .container.p-t-2
      // search
      .row
        h1.text-md-center Buscar
        form#buscar
          .form-group
            #staff-form
              .form-group
                label(for='nombre') Nombre
                input#nombre.form-control(type='text', placeholder='Nombre')
              .form-group
                label Entrada/Salida
                .radio
                  label
                    input(type='radio', name='optionsRadios', value='Dentro')
                    |                     Entrada
                .radio
                  label
                    input(type='radio', name='optionsRadios', value='Fuera')
                    |                     Salida
            button#buscarBoton.btn.btn-default(type='submit') Buscar

      // /search
      hr.m-y-2
      // contenido
      #titulocontenido
      #contenido.row.text-md-center
      // /contenido

      hr.m-y-2
      // logística
      #titulologistica
      #logistica.row.text-md-center
      // /logística
      hr.m-y-2
      
      // expotec
      #tituloexpo
      #expotec.row.text-md-center
      // /expotec
      hr.m-y-2
      
      // care
      #titulocare
      #care.row.text-md-center
      // /care
      hr.m-y-2
      
      // desarrollo
      #titulodesarrollo
      #desarrollo.row.text-md-center
      // /desarrollo
      hr.m-y-2
      
      // comite
      #titulocomite
      #comite.row.text-md-center
      // /comite
      hr.m-y-2

      // asociaciones
      #tituloasoc
      #asoc.row.text-md-center
      // /asociaciones
      hr.m-y-2
      
      // invitadoes especiales
      #tituloinvitados
      #invitados.row.text-md-center
      // /invitados especiales
      hr.m-y-2
      
      // externos
      #tituloproveedores
      #proveedores.row.text-md-center
      // /externos
      hr.m-y-2
      
      // prensa
      #tituloprensa
      #prensa.row.text-md-center
      // /prensa
      hr.m-y-2

      // footer
      .row.p-y-1
        .col-md-12.text-md-center
          small © Created by José Andrés Salazar
      // footer
    // /.container
    //

    #staff-modal.modal.fade
      .modal-dialog(role='document')
        .modal-content
          .modal-header.bg-info
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4.modal-title Registro Staffs
          .modal-body
            // registration form
            form
              fieldset.form-group
                label(for='name') Nombre:
                input#name.form-control(type='text')
              fieldset.form-group
                label.form-control-label.p-l-0(for='mail') Correo:
                input#mail.form-control(type='email')
              .row
                .col-lg-6.form-group
                  label(for='job') Puesto:
                  select#job.form-control
                    option(value='-') -
                    option(value='Contenido') Contenido
                    option(value='Logistica') Logistica
                    option(value='Expotec') Expotec Team
                    option(value='CARE') CARE
                    option(value='Comite Electoral') Comite Electoral
                    option(value='Desarrollo Estudiantil') Desarrollo Estudiantil
                .col-lg-3.form-group
                  label(for='career') Carrera:
                  select#career.form-control
                    option(value='-') -
                    option(value='LAF') LAF
                    option(value='LCPF') LCPF
                    option(value='LCDE') LCDE
                    option(value='LDF') LDF
                    option(value='LEC') LEC
                    option(value='LLN') LLN
                    option(value='LEM') LEM
                    option(value='LMC') LMC
                    option(value='LIN') LIN
