              hr.m-b-2
              button#registroAsoc.btn.btn-primary.btn-lg(type='submit') Registrar
            // /registration form
        // /.modal-content
      // /.modal-dialog
    // /.modal
    //
  

    #externos-modal.modal.fade
      .modal-dialog(role='document')
        .modal-content
          .modal-header.bg-info
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4.modal-title Registro Externos
          .modal-body
            // registration form
            form
              fieldset.form-group
                label(for='name') Nombre:
                input#name.form-control(type='text')
