                  label(for='career') Puesto:
                  select#job.form-control
                    option(value='-') -
                    option(value='Presidente') Presidente
                    option(value='Vicepresidente') Vicepresidente
                    option(value='Secretario') Secretario
                    option(value='Tesorero') Tesorero
                    option(value='Coordinador de Campañas Financieras') Campañas Financieras
                    option(value='Coordinador de Bienestar Estudiantil') Bienestar Estudiantil
                    option(value='Coordinador de Desarrollo Social') Desarrollo Social
                    option(value='Coordinador General') Coordinador General
                    option(value='Coordinador de Eventos') Coordinador Eventos
                    option(value='Coordinador de Proyectos') Coordinador Proyectos
                    option(value='Coordinador de Comunicación e Imagen') Comunicación e Imagen
