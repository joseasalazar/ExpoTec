                    option(value='LDP') LDP
                    option(value='LEF') LEF
                    option(value='LLE') LLE
                    option(value='LMI') LMI
                    option(value='LP') LP
                    option(value='LRI') LRI
                    option(value='ARQ') ARQ
                    option(value='LAD') LAD
                    option(value='LDI') LDI
                    option(value='IC') IC
                    option(value='IDS') IDS
                    option(value='IDA') IDA
                    option(value='IID') IID
                    option(value='INCQ') INCQ
                    option(value='IMI') IMI
                    option(value='IIS') IIS
                    option(value='IMA') IMA
                    option(value='IME') IME
                    option(value='IQA') IQA
                    option(value='IQP') IQP
                    option(value='IMT') IMT
                    option(value='INT') INT
                    option(value='ISC') ISC
                    option(value='ISD') ISD
                    option(value='ITC') ITC
                    option(value='ITIC') ITIC
                    option(value='ITE') ITE
                    option(value='ITS') ITS
                    option(value='IFI') IFI
                    option(value='IA') IA
                    option(value='IBN') IBN
                    option(value='IBT') IBT
                    option(value='IIA') IIA
                    option(value='IMD') IMD
                    option(value='LNB') LNB
                    option(value='LPS') LPS
                    option(value='MC') MC
                    option(value='MO') MO
                .col-lg-3.form-group
                  label(for='semester') Semestre:
                  select#semester.form-control
                    option(value='-') -
                    option(value='1') 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
                    option(value='6') 6
                    option(value='7') 7
                    option(value='8') 8
                    option(value='9') 9+
              .row
                .col-lg-12.form-group
                  label(for='subarea') Sub-Área:
                  select#subarea.form-control
                    option(value='-') -
                    option(value='Contenido Interno') Contenido Interno
                    option(value='Contenido Externo') Contenido Externo
                    option(value='Espectaculos') Espectaculos
                    option(value='Accesos y Seguridad') Accesos y Seguridad
                    option(value='Bebidas') Bebidas
                    option(value='Logistica Interna') Logistica Interna
                    option(value='Logistica Externa') Logistica Externa
                    option(value='Base') Base
                    option(value='Proveedores') Proveedores
                    option(value='Comodines') Comodines
              hr.m-b-2
              button#registroStaff.btn.btn-primary.btn-lg(type='submit') Registrar
            // /registration form
        // /.modal-content
      // /.modal-dialog
    // /.modal
    //


    #asociaciones-modal.modal.fade
      .modal-dialog(role='document')
        .modal-content
          .modal-header.bg-info
            button.close(type='button', data-dismiss='modal', aria-label='Close')
